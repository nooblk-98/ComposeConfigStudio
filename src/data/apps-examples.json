{
  "apps": [
    {
      "id": "semaphore",
      "name": "Semaphore",
      "version": "2.16",
      "description": "Built-in Docker, Docs, HashiCorp Vault integration, and more...",
      "logo": "https://raw.githubusercontent.com/ansible-semaphore/semaphore/develop/web/public/img/logo.png",
      "versions": ["2.16", "2.15", "2.14"],
      "defaultPort": 3000,
      "image": "semaphoreui/semaphore",
      "tools": [
        { "name": "Ansible", "version": "2.16.1" },
        { "name": "Bash", "version": "5.2.21" },
        { "name": "OpenSSH", "version": "9.6.0" },
        { "name": "Terraform", "version": "1.6.0.0" },
        { "name": "PowerShell", "version": "7.3.0" }
      ],
      "env": {
        "SEMAPHORE_DB_DIALECT": {
          "key": "SEMAPHORE_DB_DIALECT",
          "value": "sqlite3",
          "description": "Database dialect"
        },
        "SEMAPHORE_ADMIN": {
          "key": "SEMAPHORE_ADMIN",
          "value": "admin",
          "description": "Admin username"
        },
        "SEMAPHORE_ADMIN_PASSWORD": {
          "key": "SEMAPHORE_ADMIN_PASSWORD",
          "value": "changeme",
          "description": "Admin password"
        },
        "SEMAPHORE_ADMIN_NAME": {
          "key": "SEMAPHORE_ADMIN_NAME",
          "value": "Admin",
          "description": "Admin name"
        },
        "SEMAPHORE_ADMIN_EMAIL": {
          "key": "SEMAPHORE_ADMIN_EMAIL",
          "value": "admin@localhost",
          "description": "Admin email"
        }
      },
      "volumes": {
        "data": {
          "path": "/var/lib/semaphore",
          "description": "Contains frequently changing files"
        },
        "config": {
          "path": "/etc/semaphore",
          "description": "Contains configuration files"
        },
        "tmp": {
          "path": "/tmp/semaphore",
          "description": "Contains cloned repos, generated inventory files, etc."
        }
      },
      "databases": ["sqlite", "mysql", "postgres"],
      "features": {
        "runner": true
      }
    },
    {
      "id": "portainer",
      "name": "Portainer",
      "version": "latest",
      "description": "Container management platform with full Docker support",
      "logo": "https://portainer.io/images/logos/portainer_logo.png",
      "versions": ["latest", "2.19.4", "2.18.0"],
      "defaultPort": 9000,
      "image": "portainer/portainer-ce",
      "tools": [
        { "name": "Docker API", "version": "1.41" },
        { "name": "Kubernetes", "version": "1.28" }
      ],
      "env": {
        "PORTAINER_ADMIN_PASSWORD": {
          "key": "PORTAINER_ADMIN_PASSWORD",
          "value": "changeme123",
          "description": "Admin password (min 12 chars)"
        }
      },
      "volumes": {
        "data": {
          "path": "/data",
          "description": "Portainer data directory"
        }
      },
      "databases": [],
      "features": {
        "runner": false
      }
    },
    {
      "id": "nextcloud",
      "name": "Nextcloud",
      "version": "latest",
      "description": "Self-hosted productivity platform with file sync and sharing",
      "logo": "https://nextcloud.com/wp-content/themes/next/assets/img/logo/logo.svg",
      "versions": ["latest", "28", "27", "26"],
      "defaultPort": 80,
      "image": "nextcloud",
      "tools": [
        { "name": "PHP", "version": "8.2" },
        { "name": "Apache", "version": "2.4" }
      ],
      "env": {
        "NEXTCLOUD_ADMIN_USER": {
          "key": "NEXTCLOUD_ADMIN_USER",
          "value": "admin",
          "description": "Admin username"
        },
        "NEXTCLOUD_ADMIN_PASSWORD": {
          "key": "NEXTCLOUD_ADMIN_PASSWORD",
          "value": "changeme",
          "description": "Admin password"
        },
        "NEXTCLOUD_TRUSTED_DOMAINS": {
          "key": "NEXTCLOUD_TRUSTED_DOMAINS",
          "value": "localhost",
          "description": "Trusted domains"
        }
      },
      "volumes": {
        "data": {
          "path": "/var/www/html",
          "description": "Nextcloud application data"
        }
      },
      "databases": ["sqlite", "mysql", "postgres"],
      "features": {
        "runner": false
      }
    }
  ]
}
