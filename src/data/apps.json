{
  "apps": [
    {
      "id": "wordpress",
      "name": "WordPress",
      "version": "latest",
      "description": "Popular CMS platform for websites and blogs",
      "category": "CMS",
      "logo": "https://e7.pngegg.com/pngimages/510/1010/png-clipart-wordpress-com-blog-wordpress.png",
      "versions": ["latest", "6.4", "6.3"],
      "defaultPort": 80,
      "image": "wordpress",
      "tools": [
        { "name": "PHP", "version": "8.2" },
        { "name": "Apache", "version": "2.4" }
      ],
      "env": {
        "WORDPRESS_DB_HOST": {
          "key": "WORDPRESS_DB_HOST",
          "value": "db",
          "description": "Database host"
        },
        "WORDPRESS_DB_USER": {
          "key": "WORDPRESS_DB_USER",
          "value": "wordpress",
          "description": "Database user"
        },
        "WORDPRESS_DB_PASSWORD": {
          "key": "WORDPRESS_DB_PASSWORD",
          "value": "wordpress",
          "description": "Database password"
        },
        "WORDPRESS_DB_NAME": {
          "key": "WORDPRESS_DB_NAME",
          "value": "wordpress",
          "description": "Database name"
        }
      },
      "optionalEnv": [
        {
          "key": "WORDPRESS_TABLE_PREFIX",
          "defaultValue": "wp_",
          "description": "Database table prefix",
          "category": "Database"
        },
        {
          "key": "WORDPRESS_DEBUG",
          "defaultValue": "0",
          "description": "Enable debug mode (1 or 0)",
          "category": "Development"
        },
        {
          "key": "WORDPRESS_CONFIG_EXTRA",
          "defaultValue": "",
          "description": "Extra PHP code for wp-config.php",
          "category": "Advanced"
        }
      ],
      "volumes": {
        "data": {
          "path": "/var/www/html",
          "value": "./wordpress",
          "description": "WordPress files and uploads"
        }
      },
      "databases": ["mysql"],
      "services": [
        {
          "name": "wordpress",
          "mandatory": true,
          "images": [
            "wordpress:php8.2-apache",
            "wordpress:php8.3-apache",
            "wordpress:php8.4-apache"
          ],
          "defaultImage": "wordpress:php8.2-apache",
          "containerName": "wordpress_app",
          "restart": "always",
          "ports": ["8080:80"],
          "environment": {
            "WORDPRESS_DB_HOST": "db",
            "WORDPRESS_DB_USER": "wordpress",
            "WORDPRESS_DB_PASSWORD": "wordpress",
            "WORDPRESS_DB_NAME": "wordpress"
          },
          "volumes": ["./wordpress:/var/www/html"],
          "dependsOn": ["db"]
        },
        {
          "name": "db",
          "mandatory": false,
          "images": [
            "mariadb:10.6",
            "mariadb:11",
            "mysql:8.0",
            "mysql:8.4",
            "mysql:5.7"
          ],
          "defaultImage": "mariadb:10.6",
          "containerName": "wordpress_db",
          "restart": "always",
          "ports": [],
          "environment": {
            "MYSQL_ROOT_PASSWORD": "root",
            "MYSQL_DATABASE": "wordpress",
            "MYSQL_USER": "wordpress",
            "MYSQL_PASSWORD": "wordpress"
          },
          "volumes": ["./db_data:/var/lib/mysql"]
        },
        {
          "name": "phpmyadmin",
          "mandatory": false,
          "images": [
            "phpmyadmin/phpmyadmin:latest",
            "phpmyadmin/phpmyadmin:5.2"
          ],
          "defaultImage": "phpmyadmin/phpmyadmin:latest",
          "containerName": "wordpress_phpmyadmin",
          "restart": "always",
          "ports": ["8081:80"],
          "environment": {
            "PMA_HOST": "db",
            "PMA_USER": "root",
            "PMA_PASSWORD": "root"
          },
          "dependsOn": ["db"]
        }
      ],
      "features": {
        "runner": false
      },
      "needs_db": true,
      "supports_external_db": true,
      "attachable_services": [
        {
          "id": "phpmyadmin",
          "name": "phpMyAdmin",
          "image": "phpmyadmin/phpmyadmin",
          "defaultPort": 8080,
          "description": "Web interface for MySQL/MariaDB",
          "env": {
            "PMA_HOST": "db",
            "PMA_PORT": "3306"
          }
        }
      ]
    },

    
    {
      "id": "grafana",
      "name": "Grafana",
      "version": "latest",
      "description": "Analytics and monitoring platform with beautiful dashboards",
      "category": "Monitoring",
      "logo": "https://raw.githubusercontent.com/grafana/grafana/main/public/img/grafana_icon.svg",
      "versions": ["latest", "10.2", "10.1"],
      "defaultPort": 3000,
      "image": "grafana/grafana",
      "tools": [
        { "name": "Grafana", "version": "10.x" }
      ],
      "env": {
        "GF_SECURITY_ADMIN_USER": {
          "key": "GF_SECURITY_ADMIN_USER",
          "value": "admin",
          "description": "Admin username"
        },
        "GF_SECURITY_ADMIN_PASSWORD": {
          "key": "GF_SECURITY_ADMIN_PASSWORD",
          "value": "admin",
          "description": "Admin password"
        }
      },
      "optionalEnv": [
        {
          "key": "GF_INSTALL_PLUGINS",
          "defaultValue": "",
          "description": "Comma-separated list of plugins to install",
          "category": "Plugins"
        },
        {
          "key": "GF_SERVER_ROOT_URL",
          "defaultValue": "http://localhost:3000",
          "description": "Full public URL",
          "category": "Server"
        },
        {
          "key": "GF_SECURITY_ALLOW_EMBEDDING",
          "defaultValue": "false",
          "description": "Allow embedding in iframe",
          "category": "Security"
        },
        {
          "key": "GF_USERS_ALLOW_SIGN_UP",
          "defaultValue": "false",
          "description": "Allow user sign up",
          "category": "Users"
        }
      ],
      "volumes": {
        "data": {
          "path": "/var/lib/grafana",
          "description": "Grafana data and dashboards"
        }
      },
      "databases": ["sqlite", "mysql", "postgres"],
      "features": {
        "runner": false
      },
      "needs_db": false,
      "supports_external_db": true
    }
  ]
}
